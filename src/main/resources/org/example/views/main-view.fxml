<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>

<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.controllers.MainViewController">
    <left>
        <VBox>
            <ListView fx:id="deckList"/>
            <Button text="add" onAction="#handleAddDeck"/>
            <Button text="del" onAction="#handleRemoveDeck" />
        </VBox>
    </left>
    <center>
        <StackPane fx:id="contentPane"/>
    </center>
    <right>
        <VBox>
            <TextField fx:id="pokemonNameField" promptText="Enter name of pokemon" />
            <Button text="Add pokemon" onAction="#handleAddPokemonToDeck"/>
        </VBox>
    </right>
</BorderPane>